// 1. Obter a referência da imagem
const imagem = document.getElementById('minhaImagem');

// 2. Definir as variáveis de controle de posição e velocidade
let posX = 50; // Posição inicial horizontal (left)
let posY = 50; // Posição inicial vertical (top)
let velocidadeX = 2; // Velocidade de movimento horizontal (pixels por atualização)
let velocidadeY = 1.5; // Velocidade de movimento vertical (pixels por atualização)

// 3. Função para animar a imagem
function animarImagem() {
    // 3.1. Obter as dimensões da tela e da imagem
    const larguraTela = window.innerWidth;
    const alturaTela = window.innerHeight;
    const larguraImagem = imagem.clientWidth;
    const alturaImagem = imagem.clientHeight;

    // 3.2. Atualizar as posições
    posX += velocidadeX; // Move horizontalmente
    posY += velocidadeY; // Move verticalmente

    // 3.3. Lógica para "quicar" a imagem nas bordas (horizontal)
    if (posX + larguraImagem > larguraTela || posX < 0) {
        velocidadeX = -velocidadeX; // Inverte a direção horizontal
    }

    // 3.4. Lógica para "quicar" a imagem nas bordas (vertical)
    if (posY + alturaImagem > alturaTela || posY < 0) {
        velocidadeY = -velocidadeY; // Inverte a direção vertical
    }

    // 3.5. Aplicar as novas posições ao estilo da imagem
    imagem.style.left = posX + 'px';
    imagem.style.top = posY + 'px';
}

// 4. Iniciar a animação
// O setInterval chama a função 'animarImagem' a cada 30 milissegundos
// (aproximadamente 33 quadros por segundo)
setInterval(animarImagem, 30);
